{
  "plugins": ["jest"],
  "env": {
    "jest/globals": true,
    "shared-node-browser": true,
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2021,
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
    "allowImportExportEverywhere": true
  },
  "extends": ["plugin:react/recommended"],
  "rules": {
    "react/react-in-jsx-scope": "off"
  }
}
